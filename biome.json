{
  "$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!.next",
      "!.open-next",
      "!.wrangler",
      "!.cursor",
      "!.claude",
      "!.auto-claude",
      "!.kiro",
      "!.conductor",
      "!.vscode",
      "!.source",
      "!node_modules",
      "!dist",
      "!build",
      "!src/db",
      "!tailwind.config.ts",
      "!src/components/ui",
      "!src/components/magicui",
      "!src/components/diceui",
      "!src/components/animate-ui",
      "!src/components/tailark",
      "!src/components/ai-elements",
      "!src/components/data-table",
      "!src/app/\\[locale\\]/preview",
      "!src/payment/types.ts",
      "!src/credits/types.ts",
      "!src/types/index.d.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "formatWithErrors": true,
    "useEditorconfig": true
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noSparseArray": "off",
        "noArrayIndexKey": "off",
        "noExplicitAny": "off",
        "noShadowRestrictedNames": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "style": {
        "useTemplate": "off",
        "noNonNullAssertion": "off",
        "useNodejsImportProtocol": "off",
        "useConsistentArrayType": {
          "level": "off",
          "options": { "syntax": "shorthand" }
        }
      },
      "a11y": {
        "useValidAnchor": "off",
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "css": {
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    }
  }
}
